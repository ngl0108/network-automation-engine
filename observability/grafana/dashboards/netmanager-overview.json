{
  "uid": "netmanager-overview",
  "title": "NetManager Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["netmanager"],
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "timeseries",
      "title": "API Requests / sec",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_requests_total[1m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "API Error Rate (5xx) / sec",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m]))",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "API Latency p50/p95 (seconds)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Celery Task Failures / sec",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(celery_task_failed_total[5m]))",
          "legendFormat": "failed"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Redis Memory Used (bytes)",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "redis_memory_used_bytes",
          "legendFormat": "used"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Recent Logs (Loki)",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "datasource": "Loki",
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"netmanager\"} |= \"\""
        }
      ]
    },
    {
      "type": "stat",
      "title": "Devices Total",
      "gridPos": { "x": 0, "y": 24, "w": 6, "h": 6 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "max(netsphere_devices_total)"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Devices Online",
      "gridPos": { "x": 6, "y": 24, "w": 6, "h": 6 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(netsphere_device_up)"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Device CPU (top 5, %)",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 6 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "topk(5, netsphere_device_cpu_percent)",
          "legendFormat": "{{name}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Traffic (selected device, bps)",
      "gridPos": { "x": 0, "y": 30, "w": 24, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "netsphere_device_traffic_in_bps{name=~\"$device\"}",
          "legendFormat": "{{name}} in"
        },
        {
          "refId": "B",
          "expr": "netsphere_device_traffic_out_bps{name=~\"$device\"}",
          "legendFormat": "{{name}} out"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "device",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(netsphere_device_up, name)",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  }
}
